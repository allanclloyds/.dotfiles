# ~/.screenrc: Allan C. Lloyds <acl@acl.im>

termcapinfo xterm*|Eterm|mlterm "hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce      "on"
attrcolor   b ".I"
term        screen-256color

caption     always
hardstatus  off
vbell       off

backtick    1 0 0 whoami

hardstatus  string "%1`@%h (%n*%f%?(%u)%? %t)"
caption     string '%{= ky}%1`@%h %017=%=%{= ky}%?%-Lw%?%45L>%{=u ky}%n*%f%?(%u)%? %t%{= ky}%?%+Lw%?%{= kk}.%{ky}%=%-024= %Y-%m-%d %D %{= yk}%0c%{= ky}:%s'
