# ~/.screenrc: Allan C. Lloyds <acl@acl.im>

# Display a caption string below, appearing like tabs and
# displaying the window number and application name (by default).
# caption always
# caption string "%{kw}%-w%{wr}%n %t%{-}%+w"

termcapinfo xterm*|Eterm|mlterm "hs:ts=\E]0;:fs=\007:ds=\E]0;screen\007"
hardstatus off
vbell off

hardstatus string "%H:%n (%t)%? [%h]%?"
caption always '%{= kG}[ %{G}%H %{g}][%= %{=kw}%?%-Lw%?%{r}(%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B}%Y-%m-%d %{W}%c %{g}]'


term screen-256color
attrcolor b ".I"
# Tell screen how to set colors. AB = background, AF=foreground
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
# Erase background with current bg color.  Not needed if TERM=screen-256color
defbce "on"
